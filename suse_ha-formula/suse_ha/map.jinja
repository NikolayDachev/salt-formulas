{%- set hapillar = salt['pillar.get']('suse_ha') -%}
{%- set resources_dir = hapillar.get('resources_dir', '/data/ha/resources') -%}

{%- set cluster = hapillar['cluster'] -%}
{%- set management = hapillar['management'] -%}
{%- if 'multicast' in hapillar -%}
{%- set multicast = hapillar['multicast'] -%}
{%- else -%}
{%- set multicast = {} -%}
{%- do salt.log.error('suse_ha: No multicast pillar provided - configuration might be incomplete!') -%}
{%- endif -%}
{%- set fencing = hapillar['fencing'] -%}
{%- set resources = hapillar['resources'] -%}
