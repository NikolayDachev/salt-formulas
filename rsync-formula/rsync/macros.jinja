{%- macro contents(data, delimiter=' = ') -%}
  {%- for setting, value in data.items() %}
    {%- if value is not string and value is sequence %}
      {%- set value = ', '.join(value) -%}
    {%- endif %}
            {{ setting ~ delimiter ~ value }}
  {%- endfor %}
{%- endmacro -%}
